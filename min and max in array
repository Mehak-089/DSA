#include <iostream>
using namespace std;
void getMinMax(int arr[] , int N){
   int max = arr[0], min = arr[0];
   for(int i = 1; i < N; i++){
      if(max < arr[i])
         max = arr[i];
      if(min > arr[i])
         min = arr[i];
   }
   cout<<"Maximum Value = "<<max<<"\n";
   cout<<"Minimum Value = "<<min;
}
int main(){
  // int arr[] = {2, 1, 6, 9, 4, 10, 15, 21};
   //int N = 8;
   int N;
   cin>>N;
   int arr[N];  // Declare an array of size n

    cout << "Enter the elements of the array: ";
    for (int i = 0; i < N; i++) {
        cin >> arr[i];  // Take array elements as input
    }
   getMinMax(arr, N);
   return 0;
} 

